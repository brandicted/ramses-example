{
    "type": "object",
    "title": "Story schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "auth_fields": ["id", "start_date", "due_date", "name", "description", "progress"],
    "public_fields": ["id", "start_date", "due_date", "name"],
    "properties": {
        "_self": {
            "type": "string",
            "pattern": "http(s?)://"
        },
        "rating": {
            "type": "integer"
        },
        "signs_number": {
            "type": "integer"
        },
        "available_for": {
            "type": "integer"
        },
        "updated_at": {
            "type": ["string", "null"],
            "format": "date-time"
        },
        "assignee_id": {
            "type": ["string", "null"]
        },
        "assignee": {
            "type": ["string", "null"]
        },
        "reads": {
            "type": "integer"
        },
        "owner": {
            "type": ["string", "null"]
        },
        "valid_date": {
            "type": "string",
            "format": "date-time"
        },
        "id": {
            "type": ["integer", "string"],
            "minimum": 1
        },
        "_pk": {
            "type": "string"
        },
        "attachment": {
            "type": ["string", "null"]
        },
        "progress": {
            "type": "number"
        },
        "price": {
            "type": "number"
        },
        "owner_id": {
            "type": ["string", "null"]
        },
        "due_date": {
            "type": "string",
            "format": "date-time"
        },
        "_type": {
            "type": "string"
        },
        "arbitrary_object": {
            "type": ["object", "null"]
        },
        "description": {
            "type": "string"
        },
        "valid_time": {
            "type": "string"
        },
        "unicode_description": {
            "type": "string"
        },
        "completed": {
            "type": "boolean"
        },
        "name": {
            "type": "string"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "_version": {
            "type": "integer"
        },
        "start_date": {
            "type": "string",
            "format": "date-time"
        },
        "unicode_name": {
            "type": "string"
        },
    },
    "required": [
        "_self", "rating", "signs_number", "available_for", "updated_at",
        "assignee_id", "assignee", "reads", "owner", "valid_date", "id",
        "_pk", "attachment", "progress", "price", "owner_id", "due_date",
        "_type", "arbitrary_object", "description", "valid_time",
        "unicode_description", "completed", "name", "created_at",
        "_version", "start_date", "unicode_name"
    ]
}
